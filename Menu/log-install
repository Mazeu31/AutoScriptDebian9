echo "Dropbear    : 442"  
echo "Squid3      : 3355, 8085 (limit to IP VPS)"  
echo "PPTP VPN    : 1723" 
echo "Badvpn      : badvpn-udpgw port 7300"  
echo "Nginx       : 80"  
echo "Configs     : http://$MYIP/configs.zip)"
